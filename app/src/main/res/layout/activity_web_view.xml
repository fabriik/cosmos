<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.breadwallet.presenter.activities.settings.WebViewActivity">

    <WebView
        android:id="@+id/web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:filterTouchesWhenObscured="true">

    </WebView>
    
    
    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:visibility="invisible"
        android:background="@color/pin_pad_text"
        android:layout_height="40dp">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.breadwallet.presenter.customviews.BRText
                android:id="@+id/webview_title"
                android:textColor="@color/black"
                app:customTFont="CircularPro-Bold.otf"
                android:layout_centerHorizontal="true"
                android:text="Simplex Checkout"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <com.breadwallet.presenter.customviews.BRText
                android:id="@+id/close"
                android:text="Close"
                android:textColor="@color/button_primary_normal"
                app:customTFont="CircularPro-Bold.otf"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingEnd="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </RelativeLayout>



    </Toolbar>



    <Toolbar
        android:id="@+id/toolbar_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:background="@color/pin_pad_text"
        android:visibility="invisible"
        android:layout_height="40dp">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageButton
                android:id="@+id/webview_back_arrow"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_webview_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <ImageButton
                android:id="@+id/webview_forward_arrow"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_webview_right"
                android:layout_toRightOf="@id/webview_back_arrow"
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



            <ImageButton
                android:id="@+id/reload"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_reload_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </RelativeLayout>



    </Toolbar>

</RelativeLayout>
