<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="60dp">

    <ImageView
        android:id="@+id/token_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"/>

    <com.breadwallet.presenter.customviews.BaseTextView
        android:id="@+id/token_ticker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@id/token_icon"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:customTFont="CircularPro-Bold.otf"/>

    <com.breadwallet.presenter.customviews.BaseTextView
        android:id="@+id/token_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/token_ticker"
        android:layout_marginStart="12dp"
        android:layout_marginTop="-5dp"
        android:layout_toEndOf="@id/token_icon"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:customTFont="CircularPro-Book.otf"/>

    <Button
        android:id="@+id/add_remove_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12dp"
        android:background="?attr/add_wallet_button_background"
        android:text="@string/MenuButton.addWallet"
        android:textColor="@color/button_add_wallet_text"
        android:textSize="14sp"
        />

</RelativeLayout>