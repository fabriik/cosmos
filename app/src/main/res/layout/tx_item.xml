<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white"
                android:foreground="?android:attr/selectableItemBackground">

    <ProgressBar
        android:id="@+id/imageTransferDirection"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/transfer_in_progress"
        android:progressDrawable="@drawable/transfer_progress_drawable"
        android:max="100"
        android:indeterminate="false"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/bread_margin"
        android:layout_marginRight="@dimen/bread_margin"/>

    <com.breadwallet.legacy.presenter.customviews.BaseTextView
        android:id="@+id/tx_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/imageTransferDirection"
        android:textColor="@color/total_assets_usd_color"
        android:textSize="16sp"
        tools:text="Dec 2, 2020"/>

    <com.breadwallet.legacy.presenter.customviews.BaseTextView
        android:id="@+id/tx_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageTransferDirection"
        android:layout_toEndOf="@id/imageTransferDirection"
        android:layout_toStartOf="@id/tx_amount"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingBottom="4dp"
        android:textColor="@color/settings_chevron_right"
        android:textSize="12sp"
        tools:text="sent to f94c57...74cd8"/>

    <com.breadwallet.legacy.presenter.customviews.BaseTextView
        android:id="@+id/tx_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:textColor="@color/total_assets_usd_color"
        android:fontFamily="@font/mobile_font_bold"
        android:textSize="18sp"
        tools:text="-$839.30"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/light_gray"/>

</RelativeLayout>
